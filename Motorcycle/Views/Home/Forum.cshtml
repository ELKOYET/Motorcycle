@model IEnumerable<Message>

<form asp-action="Forum" asp-controller="Home" method="post">
    <div style=" padding-top: 50px;  ">
        <div id="Chat" class="Chat"style="background: none" >
            @foreach (var msg in Model)
            {
                <div class="ChatItem" style="        min-height: 100px;
        background-color: #92c5eb;
        border-radius: 10px;
       
        border: solid 3px rgba(255, 255, 255,0.60)">
                    <p style="font-size: 18px; border-bottom: solid; border-color:#65abe0; margin:5px;"> Пользователь: @(msg.Sender.Name+ " "+ msg.Sender.Surname + " - Дата отправки: " + msg.Departure.ToShortDateString())</p>
                    <p style="padding: 10px; font-size: 16px">@msg.messageText</p>
                </div>
            }

            <div class="MsgInput">
                <input style="width:100%; border-radius: 15px;  " type="text" name="InputedMsg" value="" placeholder="Введите сообщение..."  />
                <button  style="display: inline-block;
        border: 1px solid #92c5eb;
        color: #705D07;
        border-radius: 15px 15px 15px 15px;
        -webkit-border-radius: 15px 15px 15px 15px;
        -moz-border-radius: 15px 15px 15px 15px;
        font-family: Verdana;
        width: auto;
        height: auto;
        font-size: 16px;
        padding: 10px 40px;
        box-shadow: inset 0 1px 0 0 #fff6ce,inset 0 -1px 0 0 #e3c852,inset 0 0 0 1px #fce88d,0 2px 4px 0 #D4D4D4;
        -moz-box-shadow: inset 0 1px 0 0 #fff6ce,inset 0 -1px 0 0 #e3c852,inset 0 0 0 1px #fce88d,0 2px 4px 0 #D4D4D4;
        -webkit-box-shadow: inset 0 1px 0 0 #fff6ce,inset 0 -1px 0 0 #e3c852,inset 0 0 0 1px #fce88d,0 2px 4px 0 #D4D4D4;
        text-shadow: 0 1px 0 #fff;
        background-image: linear-gradient(to top, #92c5eb, #92c5eb);
        background-color: #92c5eb;
    " type="submit">Отправить</button>
            </div>

        </div>
    </div>

</form>

<script>
    let chat = document.getElementById("Chat");
    chat.scrollTop = chat.scrollHeight;

</script>
<script>
    document.body.style.overflow = "hidden";
</script>