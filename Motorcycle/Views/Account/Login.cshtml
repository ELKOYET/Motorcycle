@model LoginModel

@{
    ViewData["Title"] = "Вход";
}

<form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
    <div class="text-center">
        <div class="form-group">
            <input autocomplete="off" placeholder="Логин..." type="text" asp-for="Login" />
            <span asp-validation-for="Login" />
        </div>
        <div class="form-group">
            <input autocomplete="off" placeholder="Пароль..." asp-for="Password" />
            <span asp-validation-for="Password" />
        </div>
        <div class="form-group">
            <input type="submit" value="Войти" class="btnEnterTheMotorungen" />
        </div>
    </div>
</form>